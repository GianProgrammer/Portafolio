<script>
  document.addEventListener('DOMContentLoaded', () => {
    const backToTopButton = document.getElementById('back-to-top');

    if (backToTopButton) {
      backToTopButton.addEventListener('click', (e) => {
        e.preventDefault();
        window.scrollTo({ top: 0, behavior: 'smooth' });
      });

      const toggleVisibility = () => {
        const scrollPosition = window.scrollY + window.innerHeight; // lo que se ve
        const pageHeight = document.documentElement.scrollHeight;   // alto total

        if (scrollPosition >= pageHeight - 70) { // ajusta el umbral si quer√©s
          backToTopButton.style.opacity = '1';
          backToTopButton.style.visibility = 'visible';
          backToTopButton.style.pointerEvents = 'auto';
        } else {
          backToTopButton.style.opacity = '0';
          backToTopButton.style.visibility = 'hidden';
          backToTopButton.style.pointerEvents = 'none';
        }
      };

      // Inicializa y a√±ade el listener
      toggleVisibility();
      window.addEventListener('scroll', toggleVisibility);
    }

    // Manejo seguro del theme toggle
    const themeToggle = document.getElementById('theme-toggle');
    const themeToggleThumb = document.getElementById('theme-toggle-thumb');
    let isDarkTheme = document.body.classList.contains('dark-theme');

    if (themeToggle) {
      themeToggle.addEventListener('click', () => {
        isDarkTheme = !isDarkTheme;
        if (themeToggleThumb) {
          themeToggleThumb.style.transform = isDarkTheme ? 'translateX(0)' : 'translateX(28px)';
        }
        document.body.classList.toggle('dark-theme', isDarkTheme);
        document.body.classList.toggle('light-theme', !isDarkTheme);
      });
    }
  });
</script>

<style>
  @import '../styles/global.css';
  
